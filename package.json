{
  "name": "hide-my-secrets",
  "displayName": "hide-my-secrets",
  "description": "Hide My Secrets allows you to hide your secrets in vscode",
  "author": {
    "name": "Niclas",
    "url": "https://github.com/Niclassg/hide-my-secrets"
  },
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.69.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:hide-my-secrets.toggleVisibility"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "hide-my-secrets.toggleVisibility",
        "title": "Hide my Secrets: Toggle Visibility"
      }
    ],
    "configuration": {
      "properties": {
        "hide-my-secrets.words": {
          "type": "array",
          "items": {
            "type": "string",
            "title": "Secret keys"
          },
          "default": [
            "_KEY",
            "_SECRET",
            "_PASSWORD",
            "_TOKEN"
          ],
          "description": "Secrets to hide"
        },
        "hide-my-secrets.hideSecrets": {
          "type": "boolean",
          "description": "Whether to hide the secrets"
        }
      }
    },
    "keybindings": [
      {
        "key": "shift+cmd+/",
        "command": "hide-my-secrets.toggleVisibility"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "hide-my-secrets.toggleVisibility",
          "title": "Hide my Secrets: Toggle Visibility"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.69.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "eslint": "^8.18.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4",
    "@vscode/test-electron": "^2.1.5"
  }
}
